{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Run Extension",
            "type": "extensionHost",
            "request": "launch",
            "args": [
                "--extensionDevelopmentPath=${workspaceFolder}"
            ],
            "outFiles": [
                "${workspaceFolder}/client/out/**/*.js"
            ],
            "preLaunchTask": "${defaultBuildTask}"
        },
        {
            "name": "Attach to LSP Server",
            "type": "node",
            "request": "attach",
            "port": 11412,
            "skipFiles": [
                "<node_internals>/**"
            ]
        }
    ]
}
